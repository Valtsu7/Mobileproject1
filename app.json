{
  "expo": {
    "name": "flavorfriends",
    "slug": "flavorfriends",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "permissions": ["CAMERA", "CAMERA_ROLL"],
    "infoPlist": {
      "NSCameraUsageDescription": "This app requires access to the camera for taking profile pictures.",
      "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to select profile pictures."
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
